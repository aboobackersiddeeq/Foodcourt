<style>
        .body-main {
        background: #ffffff;
        border-bottom: 15px solid #1E1F23;
        border-top: 15px solid #1E1F23;
        margin-top: 30px;
        margin-bottom: 30px;
        padding: 40px 30px !important;
        position: relative ;
        box-shadow: 0 1px 21px #808080;
        font-size:10px;
        
        
        
    }

    .main thead {
		background: #1E1F23;
        color: #fff;
		}
    .img{
        height: 100px;}
    h1{
       text-align: center;
    }

    
</style>
<div class="container">

    <div class="page-header">
        <h1> </h1>
    </div>
    
    
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="col-lg-12 grid-margin stretch-card">
                    <button style="background-color: rgb(248, 34, 34);  margin-left: 27em;" class="btn btn-danger"id="download-button"
                    >Download as PDF</button>
                </div> 
            <div class="col-md-12 col-md-offset-3 body-main"id="invoice">
                
                <div class="col-md-12" >
                   <div class="row">
                        

                        <div class="col-md-4">
                            <img  style="color: #3db71e;" class="img" alt="Invoce Template" src="http://pngimg.com/uploads/shopping_cart/shopping_cart_PNG59.png" />
                        </div>
                        <div class="col-md-8 text-right">
                            <h4 style="color: #3db71e;"><strong>Foodcourt</strong></h4>
                         
                            <p>1800-234-124</p>
                            <p>Foodcourt@gmail.com</p>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <h2>INVOICE</h2>
                            <p>ID :<%=Order._id%></p>
                        </div>
                    </div>
                    <br />
                    <div class="raw">
                        <div class="col-md-6">
                            <h6>Order address :</h6>
                            <p><%=Order.address%></p>
                         </div>
                    </div>
                    
                    <br />
                    <div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th><h5>Product</h5></th>
                                    <th><h5>Price</h5></th>
                                    <th><h5>Quantity</h5></th>
                                    <th><h5>Amount</h5></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Order.products.forEach(function(pro){%>
                                <tr>
                                    <td class="col-md-3"><%=pro.item.title%></td>
                                    <td class="col-md-3"><%=pro.item.price%></td>
                                    <td class="col-md-5"><%=pro.quantity%></td>
                                    <td class="col-md-3 text-right"  class=""><i class="fas fa-rupee-sign" area-hidden="true"></i>
                                             <%=pro.item.price *pro.quantity%>  </td>
                                </tr>
                                <%})%>
                                
                                
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td class="text-right">
                                    <p>
                                        <strong>Total Amount:</strong>
                                    </p>
                                    <p>
                                        <strong> Taxes:</strong>
                                    </p>
                                    <p>
                                        <strong>Discount: </strong>
                                    </p>
                                    
                                    </td>
                                    <td  class="text-right">
                                    <p>
                                        <strong><i class="fas fa-rupee-sign" area-hidden="true"></i> <%=Order.total-(Order.total*5)/100+(Order.total*6)/100%></strong>
                                    </p>
                                    <p>
                                        <strong><i class="fas fa-rupee-sign" area-hidden="true"></i><%=(Order.total*5)/100%></strong>
                                    </p>
                                    <p>
                                        <strong><i class="fas fa-rupee-sign" area-hidden="true"></i><%=(Order.total*6)/100%></strong>
                                    </p>
                                     
                                    </td>
                                </tr>
                                <tr  >
                                    <td class="text-right"></td>
                                    <td class="text-right"></td>
                                    <td class="text-right"><h4><strong>Total:</strong></h4></td>
                                    <td class="text-right"><h4><strong><i class="fas fa-rupee-sign" area-hidden="true"></i> <%=Order.total%></strong></h4></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div>
                        <div class="col-md-12">
                            <p><b> Order Date :</b>  <%= Order.date.toString().substring(0,15)%></p>
                            <p><b> Status :</b>  <%= Order.status%></p>
                            <br />
                            
                            <!-- <p><b>Signature</b></p> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
            
        </div>
    </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
  
  

  const button = document.getElementById('download-button');

  function generatePDF() { 
      const element = document.getElementById('invoice');
      html2pdf().from(element).save();
  }

  button.addEventListener('click', generatePDF);
</script>
