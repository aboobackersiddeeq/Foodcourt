<script type="text/javascript">
    function validation() {
        let pass =document.getElementById('pw').value
        if(pass== ' '){
            document.getElementById('password').innerHTML="" 
            return false
        }
        if(pass.length<6){
            document.getElementById('password').innerHTML="" 
            return false
        }
        if (pass.search(/[0-9]/)==-1) {
            document.getElementById('password').innerHTML="Please enter at least 1 digit ."
            return false
        }
        if (pass.search(/[a-zA-Z]/)==-1) {
            document.getElementById('password').innerHTML="Please enter at least 1 letter   ."
            return false
        }
        if (pass.search(/[!\@\#\$\%\?\^\&\*\_\-\=\+\(\)]/)==-1) {
            document.getElementById('password').innerHTML="Please enter at least 1 special character"
            return false
        }else{
            document.getElementById('password').innerHTML=""
        }
    }
</script>